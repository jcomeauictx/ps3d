%!ps
% from //riptutorial.com/postscript/example/22739/iterating-through-a-path
/showpath {
	{ exch =only ( ) print =only ( ) print /moveto =} 
	{ exch =only ( ) print =only ( ) print /lineto =}
	{ 6 -2 roll exch =only ( ) print =only ( ) print
	  4 2 roll exch =only ( ) print =only ( ) print
	  exch =only ( ) print =only ( ) print /curveto =}
	{ /closepath = }
	pathforall
} bind def
20 20 moveto
0 10 rlineto
(after first segment) =
showpath
gsave stroke grestore
-10 0 rlineto
.5 setgray
(after second segment) =
showpath
gsave stroke grestore
closepath
(after closepath) =
showpath
1 0 0 setrgbcolor
gsave stroke grestore
0 1 0 setrgbcolor
fill
showpage
